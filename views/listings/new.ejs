<% layout("layouts/boilerplate") %>

<section class="container section-space">
  <div class="form-card">
    <div class="form-card__header">
      <h2>Create a new listing</h2>
      <p>Share the details travelers need to book your space.</p>
    </div>

    <form action="/listings" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="title"
          id="title"
          required
          placeholder="Luxury apartment in downtown"
          class="form-control"
        />
        <div class="invalid-feedback">Title is required.</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="description"
          id="description"
          required
          placeholder="Tell guests what makes this place special."
          class="form-control"
          rows="4"
        ></textarea>
        <div class="invalid-feedback">Please enter a description.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          name="image"
          id="image"
          placeholder="https://example.com/photo.jpg"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price per night (â‚¹)</label>
          <input
            name="price"
            id="price"
            required
            placeholder="2500"
            class="form-control"
            type="number"
            min="1"
          />
          <div class="invalid-feedback">Price is required.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="location"
            id="location"
            required
            placeholder="Mumbai"
            class="form-control"
          />
          <div class="invalid-feedback">Location is required.</div>
        </div>
      </div>
      <div class="mb-4">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          name="country"
          id="country"
          required
          placeholder="India"
          class="form-control"
        />
        <div class="invalid-feedback">Country is required.</div>
      </div>
      <button type="submit" class="btn btn-primary w-100">
        Create listing
      </button>
    </form>
  </div>
</section>
